@page "/counter"
@using Slicey.Net.Test.BlazorApp.State
@rendermode InteractiveServer
@inject CounterStateStore store;  

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @counterValue</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int counterValue = 0;
    private void IncrementCount()
    {
        store.Dispatch(store.IncreaseCounter);
    }

    protected override void OnInitialized()
    {
        counterValue = store.CounterSelector;
        store.CounterSelector.SelectorUpdated += (_, newValue) =>
        {
            counterValue = newValue;
            InvokeAsync(StateHasChanged);
        };
    }
}
